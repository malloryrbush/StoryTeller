@model IEnumerable<StoryTeller.Data.Favorites>
@{
    ViewBag.Title = "Your Favorite Stories";
}

<div class="favoritesTitle">
    <h2>Favorite Stories</h2>
</div>

<div class="containerStories">
    <div class="wrapperStories">


        @*<p>
                @Html.ActionLink("Create New", "Create")
            </p>*@
        @*<div>
                @Html.DisplayNameFor(model => model.StoryId)
            </div>*@

        @foreach (var item in Model)
        {
            <div class="boxStories zoom">
                <p>
                    Story Name:
                    @Html.DisplayFor(modelItem => item.Title)
                </p>
                <p>@Html.ActionLink("Go to Story", "Details", "Stories", new { Id = item.StoryId }, null)</p>
                <p>@Html.ActionLink("Remove from Favorites", "Delete", new { id = item.Id })</p>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@
                @*@Html.ActionLink("Details", "Details", new { id = item.Id })*@
            </div>
        }
    </div>
</div>


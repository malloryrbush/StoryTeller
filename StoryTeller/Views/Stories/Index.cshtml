@model IEnumerable<StoryTeller.Data.Story>
@{
    ViewBag.Title = "Index";
}
<style>
    ul {
        background-color: transparent;
    }

    li a {
        color: white;
    }

        li a:hover {
            background-color: gold;
            color: black;
        }
</style>

<div class="storiesHeader">
    <h2>Stories</h2>
    <p>
        @Html.ActionLink("Create A New Story", "Create", new { @class = "createStory" })
    </p>
</div>

<div class="containerStories">
    <div class="wrapperStoriesPrincess">
        <h2>Princess Stories:</h2>

        @foreach (var item in Model)
        {
            if (item.Theme.Name == "Princesses")
            {
                <div class="boxStories princessStories zoom">
                    <p class="storiesIndexText">
                        Title: <i> @Html.DisplayFor(modelItem => item.Title)</i><br />
                        Theme: <strong>@Html.DisplayFor(modelItem => item.Theme.Name)</strong>
                    </p>
                    @* Code to let the user know if the story is finished *@

                    @if (item.Paragraphs.Count == 10)
                    {
                        <p class="storiesIndexText">Story progress: Finished</p>
                    }
                    else
                    {
                        <p class="storiesIndexText">Story progress: Unfinished</p>
                    }
                    <div>
                        @if (item.Paragraphs.Count == 10)
                        {
                            <p class="storiesIndexText">
                                @Html.ActionLink("Read", "Details", new { id = item.Id })
                            </p>
                        }
                        else
                        {
                            <p class="storiesIndexText">
                                @Html.ActionLink("Contribute", "Details", new { id = item.Id })
                            </p>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <p class="storiesIndexText">
                                @Html.ActionLink("Favorite", "SetFav", "Favorites", new { id = item.Id, title = item.Title }, new { @class = "faveButton" })
                            </p>
                        }
                    </div>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </div>

            }
        }
    </div>


@{
    ViewBag.Title = "Create";
}
<div class="textBackground">

    @using (Html.BeginForm())
    {@model StoryTeller.Data.Story

    @Html.AntiForgeryToken()

    <div class="storyCreateContainer">

        <div class="grid-item createStoryBackground">

            <div class="form-horizontal">

                <h1 id="createStory">Create a New Story</h1>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group" id="choice">

                    @Html.LabelFor(model => model.ThemeId, "Choose a theme", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ThemeId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ThemeId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="giveTitle">
                    <div class="form-group" id="choice">
                        @Html.LabelFor(model => model.Title, "Story Title", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" onclick="ruleAlert()" id="createBtn" />
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>

}

    <button id="myBtn">HOW TO USE STORYTELLER</button>
    <!-- The Modal -->
    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>

            <p>Storyteller lets you write a part of the story.</p>
            <p>We've started the stories for you - all the beginnings are the same but none will end the same.</p>
            <p>Choose a story that's already in progress or you can start a new one.</p>
            <p>If you begin a new story, it must have a title.</p>
            <p>Write one paragraph and click Create to add it to the story.  After 10 paragraphs, the story will end.</p>
            <p>You can mark a story a "favorite" and go back to it.  All the finished stories will be available to read.</p>
            <p>PLEASE -- no bad words and remember -- be creative and HAVE FUN!</p>
        </div>
    </div>
</div>
        

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
















@model StoryTeller.Data.Story

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="detailsContainer">
    <h1 class="detailsTitle">@Html.DisplayName(Model.Title)</h1>


    <div class="@Model.Theme.Name">
        @* Leave this empty *@
    </div>


        @foreach (var item in Model.Paragraphs)
        {
            <div class="detailsParagraphs">
                @item.Text <br />
                <div class="detailsAuthor">by : @item.Author</div>
            </div>
        }
    <div class="detailsPartialView">
        @{
            if (Model.Paragraphs.Count == 9)
            {
                <p>is the final post, please write an ending!</p>
            }

            if (Model.Paragraphs.Count < 10)
            {
                { Html.RenderPartial("~/Views/Paragraphs/Create.cshtml", new Paragraph() { StoryId = Model.Id }); }
            }
        }
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
